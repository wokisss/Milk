  margin-bottom: 6rpx;
}
.timeline-status.data-v-1be24eab {
  font-size: 26rpx;
  color: #07c160;
}

/* 时间线连接线 */
.timeline-item:not(:last-child) .timeline-dot.data-v-1be24eab {
  position: relative;
}
.timeline-item:not(:last-child) .timeline-dot.data-v-1be24eab::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 16rpx;
  bottom: -40rpx;
  width: 2rpx;
  background-color: #e5e5e5;
  transform: translateX(-50%);
}
