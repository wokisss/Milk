
/* 基础样式 */
.milk-trace-page.data-v-07e72d3c, html.data-v-07e72d3c, body.data-v-07e72d3c, page.data-v-07e72d3c {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}
.milk-trace-page.data-v-07e72d3c {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.header.data-v-07e72d3c {
  background-color: #1980FF;
  color: #fff;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* 确保导航栏不被挤压 */
  flex-wrap: nowrap;
}
.menu-btn.data-v-07e72d3c {
  font-size: 32rpx;
  cursor: pointer;
  padding: 8rpx;
  /* 固定菜单按钮宽度 */
  width: 48rpx;
  text-align: center;
}
.search-bar.data-v-07e72d3c {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 8rpx 16rpx;
  margin: 0 16rpx;
  /* 关键：最小宽度，避免搜索栏被压缩 */
  min-width: 250rpx;
  /* 强制不换行 */
  white-space: nowrap;
}

/* 关键修改：输入框不允许溢出，图标优先显示 */
.search-input.data-v-07e72d3c {
  border: none;
  outline: none;
  flex: 1;
  font-size: 24rpx;
  color: #333;
  padding: 4rpx 0;
  /* 输入框内容溢出时隐藏，优先保证图标显示 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.icon-img.data-v-07e72d3c {
  width: 36rpx;
  height: 36rpx;
  /* 图标强制显示，不被压缩 */
  flex-shrink: 0;
}
.search-icon.data-v-07e72d3c {
  /* 搜索图标强制显示，不被压缩 */
  flex-shrink: 0;
}
.scan-icon.data-v-07e72d3c {
  margin-left: 16rpx;
  /* 扫码图标强制显示，不被压缩 */
  flex-shrink: 0;
}

/* 地区选择：picker组件样式（覆盖默认样式） */
.location-picker.data-v-07e72d3c {
  width: auto;
  /* 固定地区选择宽度，避免挤压搜索栏 */
  min-width: 120rpx;
  flex-shrink: 0;
}
.location-select.data-v-07e72d3c {
  font-size: 24rpx;
  cursor: pointer;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}
.location-hover.data-v-07e72d3c {
  background-color: rgba(255, 255, 255, 0.2);
}

/* 推荐区域 */
.recommend-section.data-v-07e72d3c {
  padding: 24rpx 16rpx;
  flex: 1;
  overflow-y: auto;
}
.section-title.data-v-07e72d3c {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 8rpx;
  border-bottom: 3rpx solid #1980FF;
  display: inline-block;
}

/* 产品网格 */
.product-grid.data-v-07e72d3c {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.product-card.data-v-07e72d3c {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
}
.product-img.data-v-07e72d3c {
  width: 100%;
  height: 220rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  background-color: #f5f5f5;
}
.product-label.data-v-07e72d3c {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-align: center;
}
.product-province.data-v-07e72d3c {
  font-size: 20rpx;
  color: #999;
}

/* 无数据提示 */
.status-tip.data-v-07e72d3c {
  text-align: center;
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-img.data-v-07e72d3c {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}
.empty-text.data-v-07e72d3c {
  font-size: 24rpx;
  color: #999;
}

/* 适配 */
@media (min-width: 750rpx) {
.product-grid.data-v-07e72d3c {
    gap: 30rpx;
}
.product-img.data-v-07e72d3c {
    height: 280rpx;
}
}
